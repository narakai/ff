<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >

    <com.umetrip.ckisdk.view.SystemTitle
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:visibility="gone"
                android:paddingTop="7.0dip"
                android:paddingBottom="7.0dip"
                android:id="@+id/ll_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/checkinfo_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:src="@drawable/checkinfo_id" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ffd4d4d4" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:background="@null"
                    android:textColorHint="#ffd4d4d4"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:textColor="#ff898e91" />
            </LinearLayout>

            <RelativeLayout
                android:paddingTop="7.0dip"
                android:paddingBottom="7.0dip"
                android:id="@+id/rl_cardtype"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/checkinfo_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/checkinfo_card_type" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_toRightOf="@id/iv_1"
                    android:layout_width="1.0dip"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ffd4d4d4" />

                <TextView
                    android:layout_toRightOf="@id/iv_2"
                    android:id="@+id/tv_cardtype"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="身份证"
                    android:textSize="18sp"
                    android:textColor="#ff898e91" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/checkinfo_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:paddingTop="7.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/checkinfo_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:src="@drawable/checkinfo_card" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ffd4d4d4" />

                <EditText
                    android:id="@+id/et_cert_no"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:background="@null"
                    android:textColorHint="#ffd4d4d4"
                    android:hint="请输入证件号"
                    android:singleLine="true"
                    android:textColor="#ff898e91" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="7.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/checkinfo_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:src="@drawable/checkinfo_phone" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ffd4d4d4" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_marginLeft="10.0dip"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:textColorHint="#ffd4d4d4"
                    android:textColor="#ff898e91" />
            </LinearLayout>
            
            <Button
                android:visibility="gone"
                android:id="@+id/bt_next"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="35dip"
                android:background="@drawable/button_bg_selector"
                android:text="下一步"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>