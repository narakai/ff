<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:paddingTop="10.0dip"
    android:paddingBottom="10.0dip">
    
    <TextView
        android:id="@+id/tv_flightno" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ff656565" 
		android:textSize="24sp"
		/>
    
    <TextView 
        android:id="@+id/tv_flightstatus" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_flightno"
		android:layout_marginTop="3dp"
		android:textColor="#ff98999b" 
		android:textSize="15sp"
        />
    
    <TextView 
        android:id="@+id/tv_flydate"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14sp" 
		android:textColor="#ff606366"
		android:layout_alignBottom="@+id/tv_flightno"
		android:layout_alignParentRight="true"/>
    
    <TextView 
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/tv_flydate"
		android:layout_marginTop="3dp"
		android:layout_alignBottom="@+id/tv_flightstatus"
		android:textSize="16sp"
		
		android:textColor="#ff98999b"/>

</RelativeLayout>
