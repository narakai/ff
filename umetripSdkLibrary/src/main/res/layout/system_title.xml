<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/titlebar_bg_normal"
        android:gravity="center"
        tools:ignore="Orientation" >

        <LinearLayout
            android:layout_width="20dip"
            android:layout_height="0dip"
            tools:ignore="Suspicious0dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/system_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="8dip"
                android:gravity="center_vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dip"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/system_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/system_title_right"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/title_right_btn_selector"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"
                android:gravity="center"
                android:visibility="invisible" />
            
            <Button
                android:id="@+id/system_title_morefuntion"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/title_right_btn_selector"
                android:textColor="@color/white"
                android:singleLine="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/system_title_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/left_return"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>